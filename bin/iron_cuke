#!/usr/bin/env ruby
$: << File.dirname(__FILE__)+'/../lib'
require 'silverware'

# configliere
Settings.use :commandline
Settings({
  homebase_dir: Dir.pwd,
  node_name: '*',
})
Settings.define :homebase_dir, flag: 'h', description: 'Directory of the Chef homebase'
Settings.define :node_name, flag: 'n', description: 'Description of chef node(s) to test'
Settings.resolve!

p Settings
